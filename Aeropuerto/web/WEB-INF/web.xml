<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Ingresar</servlet-name>
        <servlet-class>controlador.Ingresar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>elimimar</servlet-name>
        <servlet-class>controlador.elimimar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificar</servlet-name>
        <servlet-class>controlador.modificar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngresoAvion</servlet-name>
        <servlet-class>controlador.IngresoAvion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminarAvion</servlet-name>
        <servlet-class>controlador.eliminarAvion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarAvion</servlet-name>
        <servlet-class>controlador.modificarAvion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ingresar</servlet-name>
        <url-pattern>/Ingresar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>elimimar</servlet-name>
        <url-pattern>/elimimar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificar</servlet-name>
        <url-pattern>/modificar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngresoAvion</servlet-name>
        <url-pattern>/IngresoAvion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminarAvion</servlet-name>
        <url-pattern>/eliminarAvion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarAvion</servlet-name>
        <url-pattern>/modificarAvion.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
